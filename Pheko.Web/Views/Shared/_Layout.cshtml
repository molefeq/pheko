<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrapcss")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    <script src="@Url.Content("~/Scripts/Pheko/displayerrors.js")"></script>
    <script src="@Url.Content("~/Scripts/Pheko/phekomodels.js")"></script>
    <script src="@Url.Content("~/Scripts/Pheko/layout.js")"></script>
</head>
<body>
    <header class="container-fluid">
        <div class="container-fluid">
            <img src="~/Images/cureware_logo.jpg" alt="Cureware Logo" />
        </div>
        <div class="menucontainer container-fluid">
            @if (IsRequestAuthenticated)
            {
                @Html.Partial("_LayoutMenu")
            }
        </div>
    </header>
    <div class="divLine container-fluid"></div>
    @if (IsRequestAuthenticated)
    {
        <div class="container-fluid">
            <div id="currentuserdetails"><span id="loginDetails">@("Logged in as " + UserDisplayName)  @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, null)</span></div>
        </div>
    }
    <div class="main container-fluid">
        @RenderBody()
    </div>
    <div class="divLine container-fluid"></div>
    <footer class="container-fluid">
        <p>&copy; @DateTime.Now.Year - Pheko Administration</p>
    </footer>
</body>
</html>
